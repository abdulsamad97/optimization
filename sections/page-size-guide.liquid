<div class="container-fluid py-3">
	<div class="row">
		<div class="col-12 text-v-small">{% include 'breadcrumbs' %}</div>
	</div><!-- row -->
</div><!-- container -->

<header class="page-header{% if section.settings.background %} image lazyload {%endif%}" {% if section.settings.background %} data-bgset="{% include 'responsive-bg-image', image: section.settings.background %}"{% endif %}>
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 mb-md-0 col-md-8 col-lg-6 mx-auto text-center">
				<h1>{{ page.title }}</h1>
			</div>
		</div><!-- row -->
	</div>
</header>

<div class="container">
	<div class="row mt-4 mb-5">
		<div class="col-12 col-md-12 mx-auto">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="rte text-md-center mb-4 size-guide-rte">
						{{page.content}}
					</div>
				</div>
			</div>		
		</div>

        {% for block in section.blocks %}
            {% case block.type %}
            {% when 'size_guide_option' %}
                <div class="col-12 col-md-3 size-guide-option">
                    {% if block.settings.option_image %}
                        <div class="option-image">
                            <picture>
                                <source data-srcset="{{ block.settings.option_image_mobile | img_url: '260x' }}" media="(max-width: 760px)" />
                                <source data-srcset="{{ block.settings.option_image | img_url: '450x' }}" media="(min-width: 1440px)" />
                                <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ block.settings.option_image | img_url: '450x' }}" class="img-fluid lazyload mx-auto" alt="{{ block.settings.option_image.alt }}">
                            </picture>
                        </div>
                    {% endif %}
                    <div class="rte text-uppercase">{{block.settings.option_description}}</div>
                </div>
            {% when 'size_guide_option_double' %}
                <div class="col-12 col-md-3 size-guide-option size-guide-option-double">
                    {% if block.settings.option_image %}
                        <div class="option-image">
                            <picture>
                                <source data-srcset="{{ block.settings.option_image_mobile | img_url: '260x' }}" media="(max-width: 760px)" />
                                <source data-srcset="{{ block.settings.option_image | img_url: '450x' }}" media="(min-width: 1440px)" />
                                <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ block.settings.option_image | img_url: '450x' }}" class="img-fluid lazyload mx-auto" alt="{{ block.settings.option_image.alt }}">
                            </picture>
                        </div>
                    {% endif %}
                    <div class="double-text-wrapper">
                        <div class="rte text-uppercase">{{block.settings.option_description}}</div>
<!--                         <div class="rte text-uppercase">{{block.settings.option_description_two}}</div> -->
                    </div>
                </div>
            {% endcase %}
        {% endfor %}


          <div class="col-12 col-md-12 mx-auto clothing-size">
                        <div class="row no-gutters">
                            <div class="col-12">
                                <div class="rte text-md-center mb-4 size-guide-rte">
                                    <h2 class="main-sizeguide-info">CLOTHING SIZE GUIDE</h2>  
                                    <table class="custom-size-info">
                                      <thead>
                                        <tr>
                                          <th>INT</th>
                                          <th>EU</th>
                                          <th>UK/AU</th>
                                          <th>US</th>
                                          <th>FR/ES</th>
                                          <th>IT</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <tr>
                                          <td>XS</td>
                                          <td>34</td>
                                          <td>6</td>
                                          <td>2</td>
                                          <td>36</td>
                                          <td>38</td>   
                                        </tr>
                                        <tr>
                                          <td>S</td>
                                          <td>36</td>
                                          <td>8</td>
                                          <td>4</td>
                                          <td>38</td>
                                          <td>40</td> 
                                        </tr>
                                         <tr>
                                          <td>M</td>
                                          <td>38</td>
                                          <td>10</td>
                                          <td>6</td>
                                          <td>40</td>
                                          <td>42</td> 
                                        </tr>
                                         <tr>
                                          <td>L</td>
                                          <td>40</td>
                                          <td>12</td>
                                          <td>8</td>
                                          <td>42</td>
                                          <td>44</td> 
                                        </tr>
                                         <tr>
                                          <td>XL</td>
                                          <td>42</td>
                                          <td>14</td>
                                          <td>10</td>
                                          <td>44</td>
                                          <td>46</td> 
                                        </tr>
                                         <tr>
                                          <td>XXL</td>
                                          <td>44</td>
                                          <td>16</td>
                                          <td>12</td>
                                          <td>46</td>
                                          <td>48</td> 
                                        </tr>
                                      </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>		
                    </div>
        
	</div>
</div>

{% schema %}
{
  "name": "Size Guide",
	"settings": [
		{
			"type": "image_picker",
			"id": "background",
			"label": "Header Background Image",
			"info": "Optimal image size: 1920 x 350"
		}
	],
	"blocks": [
		{
			"type": "size_guide_option",
			"name": "Size Guide Option",
			"settings": [
                {
                    "type": "image_picker",
                    "id": "option_image",
                    "label": "Option Image",
                    "info": "Optimal image width size: 450px"
                },
                {
                    "type": "image_picker",
                    "id": "option_image_mobile",
                    "label": "Option Image Mobile",
                    "info": "Optimal image width size: 260px"
                },
                {
				   "type":      "richtext",
				   "id":        "option_description",
				   "label":     "Option Description"
				}
			]
		},
        {
			"type": "size_guide_option_double",
			"name": "Size Guide Option Double",
			"settings": [
                {
                    "type": "image_picker",
                    "id": "option_image",
                    "label": "Option Image",
                    "info": "Optimal image width size: 450px"
                },
                {
                    "type": "image_picker",
                    "id": "option_image_mobile",
                    "label": "Option Image Mobile",
                    "info": "Optimal image width size: 260px"
                },
                {
				   "type":      "richtext",
				   "id":        "option_description",
				   "label":     "Option Description"
				},
                {
				   "type":      "richtext",
				   "id":        "option_description_two",
				   "label":     "Option Description Two"
				}
			]
		}
	]
}
{% endschema %}