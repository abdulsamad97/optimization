<div class="container-fluid py-3">
	<div class="row">
		<div class="col-12 text-v-small">{% include 'breadcrumbs' %}</div>
	</div><!-- row -->
</div><!-- container -->

<header class="page-header{% if section.settings.background %} image lazyload {%endif%}" {% if section.settings.background %} data-bgset="{% include 'responsive-bg-image', image: section.settings.background %}"{% endif %}>
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 mb-md-0 col-md-8 col-lg-6 mx-auto text-center">
				<h1>{{ page.title }}</h1>
			</div>
		</div><!-- row -->
	</div>
</header>

<div class="container">
	<div class="row mb-5">
		<div class="col-12 col-md-9 mx-auto">
			<div class="row no-gutters">
				{% if page.content != blank %}
					<div class="col-12 mt-4">
						<div class="rte mb-4">
							{{page.content}}
						</div>
					</div>
				{% endif %}
				<div class="col-12">
					<div class="accordion-container  mt-3">
						{% for tab in section.blocks %}
						<div class="accordion-item {% if forloop.first == true %}active{% endif %}">
							<div class="accordion-title">
								<h3>{{ tab.settings.tab_title }}{% render 'icon-chevron-down'%}</h3>
							</div><!-- accordion-title -->
							<div class="accordion-content">
								<div class="rte">
									{{ tab.settings.tab_content }}
                                    {% if tab.settings.button_link != blank %}
                                        <a href="{{tab.settings.button_link}}" class="btn btn-secondary btn-coupon">{{tab.settings.button_text}}</a>
                                    {% endif %}
								</div>
							</div><!-- accordion-content -->
						</div><!-- accordion-item -->
						{% endfor %}
					</div><!-- accordion-container -->
				</div><!-- col -->
			</div>
			
		</div>
	</div>
</div>

{% schema %}
{
  "name": "Coupons",
	"settings": [
		{
			"type": "image_picker",
			"id": "background",
			"label": "Header Background Image",
			"info": "Optimal image size: 1920 x 350"
		}
	],
  "blocks": [
		{
			"type": "tab",
			"name": "Tabs",
			"settings": [
				{
					"type": "text",
					"id": "tab_title",
					"label": "Tab Title"
				},
				{
					"type": "richtext",
					"id": "tab_content",
					"label": "Tab Content"
				},
                {
					"type": "text",
					"id": "button_text",
					"label": "Button text"
				},
                {
                    "type":      "url",
                    "id":        "button_link",
                    "label":     "Button Link"
                }
			]
		}
  ]
}
{% endschema %}