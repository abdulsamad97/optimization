<div class="signup-form-page-wrapper">
  <div class="signup-form-page-info">

    <div class="signup-form-banner-info">
      <div class="banner-info">
        <div class="img-with-content-over-info">
         	 <p>{{section.settings.main-heading}}</p>
         	 <h2>{{section.settings.sub-heading}}</h2>
        </div>
        
        <div class="desktop-view-info">
          <img src="{{section.settings.desktop-image | img_url :'1499x625' }}" alt="desktop-banner">
        </div>
        <div class="mobile-view-info">
          <img src="{{section.settings.mobile-image | img_url :'original' }}" alt="mobile-banner">
        </div>
      </div>



      <div class="signup-form-info">
        {% comment %}
    <div class="klaviyo-form-SGSm6Q"></div>
    <div class="klaviyo-form-TSteLx"></div>
        {% endcomment %}
        
        {{ page.content }}
      </div>

    </div>

  </div>
</div>


<style>
  body#signup .custom-klaviyo-start-wrapper {
    display: none;
}
#signup .custom-klaviyo-start-wrapper {display: none;}
.img-with-content-over-info {position: absolute;left: 0;right: 0;margin:0px auto;text-align: center;z-index: 1;width: 100%;}
.img-with-content-over-info p {margin-bottom: 5px;color: #fff;font-family: Helvetica Neue Extra Bold;word-spacing: 4px;}
.img-with-content-over-info h2 {margin-top: 0px;font-family: Helvetica Neue Extra Bold;word-spacing: 3px;color: #fff;}
.banner-info .desktop-view-info:before, .banner-info .mobile-view-info:before {content: " ";width: 100%;height: 100%;background-color: #00000038;position: absolute;}
.signup-form-page-wrapper .signup-form-page-info .signup-form-banner-info .signup-form-info {width: 100%;left: 0px;right: 0px;margin: 0px auto;}  
@media screen and (min-width: 501px){
  .img-with-content-over-info {bottom: 30%;}
}
@media screen and (min-width: 800px){
  .img-with-content-over-info h2 {font-size: 71px;}
  .img-with-content-over-info p {font-size: 21px;}
}
@media screen and (min-width: 1500px){
  .img-with-content-over-info {bottom: 25%;}
} 
@media screen and (max-width: 799px){
  .img-with-content-over-info {bottom: 110px;}
  .img-with-content-over-info h2 {font-size: 41px;}
  .img-with-content-over-info p {font-size: 18px;}
}
@media screen and (max-width: 500px){  
  .img-with-content-over-info {bottom: 130px;}
}
</style>



