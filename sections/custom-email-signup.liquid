      "label": "Main Heading"
    },
{
      "id": "sub-heading",
      "type": "html",
      "label": "Sub Heading"
    },
    {
      "id": "desktop-image",
      "type": "image_picker",
      "label": "Desktop image"
    },
     {
      "id": "mobile-image",
      "type": "image_picker",
      "label": "Mobile image"
    }
  ]
  ,
  "presets": [
    {
      "name": "Email Signup",
      "category": "Promotional"
    }
  ]
}
{% endschema %}