<div class="container-fluid py-3">
	<div class="row">
		<div class="col-12 text-v-small">{% include 'breadcrumbs' %}</div>
	</div><!-- row -->
</div><!-- container -->

<header class="page-header{% if section.settings.background %} image lazyload {%endif%}" {% if section.settings.background %} data-bgset="{% include 'responsive-bg-image', image: section.settings.background %}"{% endif %}>
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 mb-md-0 col-md-8 col-lg-6 mx-auto text-center">
				<h1>{{ page.title }}</h1>
			</div>
		</div><!-- row -->
	</div>
</header>

<div class="container">
	<div class="row mt-4 mb-5">
		<div class="col-12 col-md-12 mx-auto">
			<div class="row no-gutters">
				<div class="col-12">
					<div class="rte mb-4">
						{{page.content}}
					</div>
                    <table class="cookie-table">
                        <thead>
                            <tr>
                                <td>Cookie Name</td>
                                <td>Cookie Description</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for block in section.blocks %}
                                <tr>
                                    <td><div class="cookie-names">{{block.settings.cookie_name}}</div><span class="cookie-read-more">View All</span></td>
                                    <td>{{block.settings.cookie_description}}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
				</div>
			</div>		
		</div>
	</div>
</div>

{% schema %}
{
  "name": "Cookies",
	"settings": [
		{
			"type": "image_picker",
			"id": "background",
			"label": "Header Background Image",
			"info": "Optimal image size: 1920 x 350"
		}
	],
	"blocks": [
		{
			"type": "cookie_row",
			"name": "Cookie Row",
			"settings": [
                {
				   "type":      "richtext",
				   "id":        "cookie_name",
				   "label":     "Cookie Name"
				},
                {
				   "type":      "richtext",
				   "id":        "cookie_description",
				   "label":     "Cookie Description"
				}
			]
		}
	]
}
{% endschema %}