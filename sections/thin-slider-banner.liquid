{% capture slide_settings %}{"slidesToShow": 1, "slidesToScroll": 1, "arrows":false, "autoplay":true, "autoplaySpeed": 3000, "dots": false, "infinite": true, "adaptiveHeight": true}{% endcapture %}
{% if section.blocks.size > 0 %}
<section class="thin-banner-header-bottom-bar">
    <div class="row">
      <div class="col-lg-12 thin-header-bottom-bar-item">
        <div class="thin-header-bottom-bar-inner" id="banner-slider" data-slick='{{ slide_settings }}'>
          {% for block in section.blocks %}
            <div class="thin-header-bottom-slider-item">
          {% if block.settings.item_link != blank %}
            <a href="{{ block.settings.item_link }}">
            {% endif %}
        	<p>{{ block.settings.text_banner }}</p>
   {% if block.settings.item_link != blank %}
            </a>
            {% endif %}
            </div>
            {% endfor %}
        </div>        
      </div>
      
    </div>
</section>
{% endif %}
<style>
  .thin-banner-header-bottom-bar{
    background-color:{{section.settings.background_color}};
    color:{{section.settings.font_color}};
    font-size: 14px;
    text-align: center;
    border-top: 2px solid #fff;
    padding-top: 10px;
  }
  .thin-banner-header-bottom-bar p{
    margin-bottom:10px;
  }
  .thin-banner-header-bottom-bar a{
    color:{{section.settings.font_color}};
  }
 @media (max-width:767px){
   .thin-banner-header-bottom-bar{
     font-size:12px;
   }
   .thin-banner-header-bottom-bar p{
      margin-bottom:10px;
      padding:0 15px;
      font-size:12px;
    }
 }
</style>


{% schema %}
  {
    "name": "Thin Slider Banner Bar",
	
    "settings": [
	{
		"id":"background_color",
		"type":"color",
		"label":"Background Color",
		"default":"#000000"
	},	
	{
		"id":"font_color",
		"type":"color",
		"label":"Text Color",
		"default":"#ffffff"
	}
	],
    "blocks": [
		{
			"type": "banner_item",
			"name": "Banner Item",
			"settings": [
                
				{
                    "type":     "text",
				    "id":       "text_banner",
				    "label":    "Banner Text"
				},
                {
                    "type":     "url",
                    "id":       "item_link",
                    "label":    "Link"
                }
			]
		}
	],
    "presets": [
      {
          "name": 		"Thin Slider Banner Bar",
          "category": 	"Header"
      }
  	]
  }
{% endschema %}

