<div id="mobile-collection-header">
    {% for block in section.blocks %}
        <div class="showcase-item">
            <a href="{{block.settings.link}}">
            <span class="showcase-item-image">
                <img class="lazyload" data-src="{{ block.settings.image | img_url: '70x' }}" alt="{{block.settings.image.alt}}">
            </span>
            <span class="showcase-item-title">{{block.settings.title}}</span>
            </a>
        </div><!-- showcase-collection-item -->
    {% endfor %}
</div>

{% schema %}
{
    "name": "Mobile Collection Header",
    "settings": [
       	{
            "type": 	"header",
            "content": 	"Info"
        },
        {
            "type":     "paragraph",
            "content":  "Only visible on Tablet (768px) and lower."
        }
	],
    "blocks": [
		{
			"type": "collection",
			"name": "collection",
			"settings": [
                {
				  "type": "image_picker",
				  "id": "image",
				  "label": "Collection Image",
				  "info": "Recommended Ratio is 4:4"
				},
				{
                    "type":     "text",
				    "id":       "title",
				    "label":    "Collection Title"
				},
                {
                    "type":     "url",
                    "id":       "link",
                    "label":    "Colleciton Link"
                }
			]
		}
	]
}
{% endschema %}