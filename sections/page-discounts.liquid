<div class="container pt-5 pb-4">
	<div class="row">
		<div class="col-12 text-v-small">{% include 'breadcrumbs' %}</div>
	</div><!-- row -->
</div><!-- container -->
{% comment %}
<header class="page-header{% if section.settings.background %} image lazyload {%endif%}" {% if section.settings.background %} data-bgset="{% include 'responsive-bg-image', image: section.settings.background %}"{% endif %}>
	<div class="container">
		<div class="row align-items-center">
			<div class="col-12 mb-md-0 col-md-8 col-lg-6 mx-auto text-center">
				<h1>{{ page.title }}</h1>
			</div>
		</div><!-- row -->
	</div>
</header>
{% endcomment %}
<div class="container">
    <div class="row no-gutters">
        <div class="col-12 mb-5">
            <div class="discount-wrapper">
            {% for block in section.blocks %}
                <div class="discount-item-image col-lg-6">
                    <a href="{{block.settings.discount_url}}">
                        <picture>
                            <source media="(max-width: 560px)" srcset="{{ block.settings.discount_image_mobile | img_url: '560x' }}">
                            <source media="(min-width: 1440px)" srcset="{{ block.settings.discount_image | img_url: '375x' }}">
                            <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="{{ block.settings.discount_image_mobile | img_url: '375x' }}" class="img-fluid lazyload d-block" alt="{{ block.settings.discount_image_mobile.title }}">
                        </picture>
                    </a>
                </div>
                <div class="discount-item-details text-center col-lg-6">
                  <div class="col-12">
                    <h3>{{ block.settings.title | upcase}}</h3>
                  	<p>{{ block.settings.description }}</p>
                  </div>
                  <div class="col-12">
                    <div class="row">
                      <div class="col-lg-6 text-center">
                        <h3>{{ block.settings.unidays_off_percentage | upcase}}</h3>
                        <p><span>with</span></p>
                        <div>
                          <img src="{{ block.settings.unidays_logo | img_url: '760x' }}" class="img-fluid custom-imgHeight" alt="{{ block.settings.title }}">
                          
                        </div>
                        <a class="btn-discount" href="{{block.settings.unidays_login_link}}">{{ block.settings.unidays_login_text }}</a>
                      </div>
                      <div class="col-lg-6">
                        <h3>{{ block.settings.youthdiscount_off_percentage | upcase}}</h3>
                        <p><span>with</span></p>
                        <div>
                          <img src="{{ block.settings.youthdiscount_logo | img_url: '760x' }}" class="img-fluid custom-imgHeight" alt="{{ block.settings.title }}">
                        </div>
                        <a class="btn-discount" href="{{block.settings.youthdiscount_login_link}}">{{ block.settings.youthdiscount_login_text }}</a>
                      </div>
                    </div>
                  </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Discount Schemes",
	"settings": [
		{
			"type": "image_picker",
			"id": "background",
			"label": "Header Background Image",
			"info": "Optimal image size: 1920 x 350"
		}
	],
	"blocks": [
		{
			"type": "discount",
			"name": "Discount",
			"settings": [
                {
                    "type": "image_picker",
                    "id": "discount_image",
                    "label": "Discount Image",
                    "info": "Optimal image width size: 375px"
                },
                {
                    "type": "image_picker",
                    "id": "discount_image_mobile",
                    "label": "Mobile Discount Image",
                    "info": "Optimal image width size: 560px"
                },
				{
                    "type":      "text",
                    "id":        "title",
                    "label":     "Title",
                    "info":      "Title the image."
                },
				{
                    "type":      "textarea",
                    "id":        "description",
                    "label":     "Description",
                    "info":      "Description text for the image/link for SEO."
                },
				{
                    "type":      "text",
                    "id":        "unidays_off_percentage",
                    "label":     "Unidays off percentage",
                    "info":      "Unidays off percentage"
                },
				{
					"type": "image_picker",
                    "id": "unidays_logo",
                    "label": "Unidays Logo"
				},
				{
					"type": "image_picker",
                    "id": "youthdiscount_logo",
                    "label": "Youth Discount Logo"
				},
				{
                    "type":      "text",
                    "id":        "youthdiscount_off_percentage",
                    "label":     "Youthdiscount off percentage",
                    "info":      "Youthdiscount off percentage"
                },
				{
				   "type":      "text",
				   "id":        "unidays_login_text",
				   "label":     "Unidays Login text"
				},
                {
				   "type":      "url",
				   "id":        "unidays_login_link",
				   "label":     "Unidays Login URL"
				},
				{
				   "type":      "text",
				   "id":        "youthdiscount_login_text",
				   "label":     "YouthDiscount Login Text"
				},
				{
				   "type":      "url",
				   "id":        "youthdiscount_login_link",
				   "label":     "YouthDiscount Login URL"
				}
			]
		}
	]
}
{% endschema %}