<style>
  .blog-btn-wrapper{
  	margin-top:35px;
  }
</style>
<!-- PD BLOG SECTION -->

<div id="pd-blog-section" class="desktop_view_info">
  <div class="container">
    <div class="row align-items-center ">
      <div class="col-12 text-center text-uppercase">
         <h3>{{section.settings.text-box}}</h3>
      </div>
    </div>
    <div class="row" id="pd-blog-wrapper">
      {% for article in blogs.blog.articles limit:3 %}
      <div class="col-md-4 col-lg-4 mb-5 custom-sm-mb">
        <div class="pd-blog-img-wrapper text-center"><img class="lazyload" data-src="{{ article | img_url: 'large' }}" alt="{{ article.title }}" width="480" height="480"></div>
        <div class="pd-blog-details-wrapper text-center">
          <h3 class="blog-title">{{ article.title | link_to: article.url }}</h3>
          <span><a href="{{ article.url }}">Read Now</a></span>
        </div>

      </div>
      {% endfor %}
    </div><!-- row -->
    <div class="row blog-btn-wrapper">
      <div class="col-12 text-center">
        <a id="blog-read-more-btn" href="/blogs/blog">READ MORE</a>
       {% comment %} <button id="product-additional-more" class="btn btn-primary btn-wide btn-wide-alt">Read More</button>{% endcomment %}
      </div>
    </div>
  </div>
</div>
<!-- PD BLOG SECTION -->
{% schema %}
{
  "name": "Pd blog",
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    }
  ]
  ,
  "presets": [
    {
      "name": "Pd blog",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
